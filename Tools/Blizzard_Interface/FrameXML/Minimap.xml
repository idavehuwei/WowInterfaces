		</Frames>
		<Scripts>
			<OnLoad>
				Minimap.timer = 0;
				Minimap_Update();
				self:RegisterEvent("ZONE_CHANGED");
				self:RegisterEvent("ZONE_CHANGED_INDOORS");
				self:RegisterEvent("ZONE_CHANGED_NEW_AREA");
				Minimap_UpdateRotationSetting();
			</OnLoad>
			<OnEvent function="Minimap_Update"/>
		</Scripts>
	</Frame>
