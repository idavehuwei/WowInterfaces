							</Anchor>
						</Anchors>
						<Size>
							<AbsDimension x="64" y="64"/>
						</Size>
					</FontString>
				</Layer>
			</Layers>				
			<Scripts>
				<OnLoad>
					AchievementShield_OnLoad(self);
				</OnLoad>
			</Scripts>
		</Frame>
	</Frames>
	<Scripts>
		<OnLoad>
			AchievementAlertFrame_OnLoad(self);
		</OnLoad>
		<OnClick>
			AchievementAlertFrame_OnClick(self, button, down);
		</OnClick>
	</Scripts>
