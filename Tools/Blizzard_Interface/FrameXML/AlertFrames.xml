				</Layer>
				<Layer level="BORDER">
					<Texture name="$parentBling" file="Interface\AchievementFrame\UI-Achievement-Bling" hidden="true">
						<Anchors>
							<Anchor point="CENTER">
								<Offset>
									<AbsDimension x="-1" y="1"/>
