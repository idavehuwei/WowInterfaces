<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
	<Script file="BigFootGadget.lua"/>
	<Button name="BigFootClockButton" frameStrata="MEDIUM" parent="MinimapCluster" hidden="true">
		<Size>
			<AbsDimension x="50" y="50"/>
		</Size>
		<Anchors>
			<Anchor point="TOPRIGHT">
				<Offset>
					<AbsDimension x="4" y="-19"/>
				</Offset>
			</Anchor>
		</Anchors>
		<HitRectInsets>
			<AbsInset left="6" right="0" top="5" bottom="10"/>
		</HitRectInsets>
		<Layers>
			<Layer level="BORDER">
				<Texture name="$parentBorder" file="Interface\AddOns\BigFootGadget\clockborder">
					<TexCoords left="0.015625" right="0.75" top="0.015625" bottom="0.75"/>
				</Texture>
			</Layer>
			<Layer level="BACKGROUND">
				<Texture name="BigFootClockTexture" file="Interface\AddOns\BigFootGadget\clockface">
					<Size>
						<AbsDimension x="40" y="40"/>
					</Size>
					<Anchors>
						<Anchor point="CENTER">
							<Offset>
								<AbsDimension x="-1" y="0"/>
							</Offset>
						</Anchor>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
		<Scripts>
			<OnLoad>
				BigFootClockButton_OnLoad(self);
			</OnLoad>
			<OnEnter>
				BigFootClockButton_OnEnter(self);
			</OnEnter>
			<OnLeave>
				BigFootClockButton_OnLeave(self);
			</OnLeave>
			<OnUpdate>
				BigFootClockButton_OnUpdate(self, elapsed);
			</OnUpdate>
			<OnClick>
				BigFootClockButton_OnClick(self, button);
			</OnClick>
		</Scripts>
	</Button>
	<Button name="BigFootGPSButton" frameStrata="HIGH" parent="Minimap" movable="true" clampedToScreen="true" hidden="true">
		<Size>
			<AbsDimension x="48" y="20"/>
		</Size>
		<Anchors>
			<Anchor point="TOP" relativeTo="BigFootClockButton" relativePoint="BOTTOM">
				<Offset>
					<AbsDimension x="0" y="5"/>
				</Offset>
			</Anchor>
		</Anchors>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture name="$parentBorder" file="Interface\AddOns\BigFootGadget\gpsborder">
					<TexCoords left="0" right="0.75" top="0" bottom="0.375"/>
				</Texture>
			</Layer>
			<Layer level="ARTWORK">
				<FontString name="BigFootGPSText" inherits="MasterFont" font="Fonts\FRIZQT__.TTF" text="88,88">
					<Color r="1.0" g="0.82" b="0"/>
					<FontHeight>
						<AbsValue val="10"/>
					</FontHeight>
					<Anchors>
						<Anchor point="CENTER">
							<Offset>
								<AbsDimension x="-1" y="1"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Scripts>
			<OnLoad>
				BigFootGPSButton_OnLoad(self);
			</OnLoad>
			<OnEnter>
				BigFootGPSButton_OnEnter(self);
			</OnEnter>
			<OnLeave>
				BigFootGPSButton_OnLeave(self);
			</OnLeave>
			<OnShow>
				SetMapToCurrentZone();
			</OnShow>
			<OnUpdate>
				BigFootGPSButton_OnUpdate(self, elapsed);
			</OnUpdate>
			<OnMouseDown>
				BigFootGPSButton_OnMouseDown(self, button);
			</OnMouseDown>
			<OnMouseUp>
				BigFootGPSButton_OnMouseUp(self, button);
			</OnMouseUp>
		</Scripts>
		<HighlightTexture alphaMode="ADD" file="Interface\AddOns\BigFootGadget\gpshilight">
			<TexCoords left="0" right="0.75" top="0" bottom="0.375"/>
		</HighlightTexture>
	</Button>
</Ui>
