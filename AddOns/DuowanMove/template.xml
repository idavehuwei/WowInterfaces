<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="svn://113.106.98.20/repos/Duowan-Work/UI.xsd">
	<Script file="template.lua"/>
	<!-- Tab Template -->
	<Button name="DuowanMoveTabTemplate" alpha="0.5" frameStrata="HIGHT" clampedToScreen="true" virtual="true" toplevel="true">
		<Size x="34" y="10"/>
		<Layers>			
			<Layer level="ARTWORK">
				<FontString name="$parentLable" inherits="ChatFontNormal">
					<Anchors>
						<Anchor point="BOTTOM" relativePoint="TOP">
							<Offset><AbsDimension x="0" y="0"/></Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Scripts>
			<OnLoad>
				DuowanMoveTab_OnLoad(self);
				DuowanMoveFrame_OnLoad(self:GetParent());
			</OnLoad>
			<OnClick>
				DuowanMoveTab_OnClick(self, button);
			</OnClick>
			<OnDragStart>
				DuowanMoveTab_OnDragStart(self, button);
			</OnDragStart>
			<OnDragStop>
				DuowanMoveTab_OnDragStop(self, button);
			</OnDragStop>
		</Scripts>
		<NormalTexture file="Interface\AddOns\DuowanMove\img\tab1.tga">
			<Size x="56" y="12"/>
			<Anchors><Anchor point="CENTER"/></Anchors>
		</NormalTexture>
		<HighlightTexture file="Interface\AddOns\DuowanMove\img\tab2.tga" alphaMode="ADD">
			<Size x="56" y="12"/>
			<Anchors><Anchor point="CENTER"/></Anchors>
		</HighlightTexture>
	</Button>	

	<!-- Anchor Template -->
	<Frame name="DuowanMoveAnchorTemplate" Parent="UIParent" hidden="false" frameStrata="HIGHT" virtual="true" movable="true" enableMouse="false" inherits="SecureHandlerStateTemplate">
		<Size><AbsDimension x="430" y="128"/></Size>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture name="$parentBG" file="Interface\ChatFrame\ChatFrameBackground" setAllPoints="true">
					<Color r="0.0" g="0.0" b="0.0" a="0.5"/>
				</Texture>
			</Layer>			
			<Layer level="ARTWORK">
				<FontString name="$parentText" inherits="ChatFontNormal">
					<Anchors>
						<Anchor point="CENTER" relativePoint="CENTER">
							<Offset><AbsDimension x="0" y="0"/></Offset>
						</Anchor>
					</Anchors>
					<Color r="1.0" g="1.0" b="1.0" a="0.5"/>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Button name="$parentTab" inherits="DuowanMoveTabTemplate">
				<Anchors>
					<Anchor point="BOTTOMLEFT" relativeTo="$parent" relativePoint="TOPLEFT">
						<Offset><AbsDimension x="1" y="2"/></Offset>
					</Anchor>
				</Anchors>
			</Button>
		</Frames>
	</Frame>
</Ui>