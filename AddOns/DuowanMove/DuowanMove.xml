			</Button>
		</Frames>
		<Scripts>
			<OnLoad>
				DMMakeThemeFrame_OnLoad(self);
			</OnLoad>
			<OnShow>
				DMMakeThemeFrame_OnShow(self);
			</OnShow>
			<OnMouseUp>
				if (self.isMoving) then
					self:StopMovingOrSizing();
				end
			</OnMouseUp>
			<OnDragStart>
				self:StartMoving();
				self.isMoving = true;
			</OnDragStart>
			<OnDragStop>
				self:StopMovingOrSizing();
				self.isMoving = false;
			</OnDragStop>
		</Scripts>
