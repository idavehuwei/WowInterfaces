		<Size>
			<AbsDimension x="150" y="14" />
		</Size>
		<ButtonText name="$parentNormalText" inherits="GameFontNormalSmall" justifyH="LEFT" nonspacewrap="true">
			<Size>
				<AbsDimension x="150" y="10"/>
			</Size>
			<Anchors>
				<Anchor point="LEFT">
					<Offset>
						<AbsDimension x="5" y="1"/>
					</Offset>
				</Anchor>
			</Anchors> 
		</ButtonText>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture file="Interface\QuestFrame\UI-QuestLogTitleHighlight" alphaMode="ADD" name="$parentMouseOver" hidden="true"/>
			</Layer>
		</Layers>
		<Scripts>
			<OnEnter>
				getglobal(this:GetName() .. "MouseOver"):Show();
				GameTooltip:SetOwner(this, "ANCHOR_RIGHT");
				if(GetItemInfo("item:"..this.itemid..":0:0:0:0:0:0")) then
					GameTooltip:SetHyperlink("item:"..this.itemid..":0:0:0:0:0:0");
					GameTooltip:Show();
				else
					GameTooltip:SetText("This item is not in your cache, you can try to get the information by rightclicking the item (This may result in a disconnect!)", 1.0, 1.0, 1.0, 1.0, 1);
					GameTooltip:Show();
				end
			</OnEnter>
			<OnLeave>
				GameTooltip:Hide();
				if(CT_RaidTracker_ItemOptions_selected ~= this.id) then
					getglobal(this:GetName() .. "MouseOver"):Hide();
				end
			</OnLeave>
			<OnLoad>
				this:RegisterForClicks("LeftButtonUp", "RightButtonUp");
				getglobal(this:GetName() .. "MouseOver"):SetAlpha(0.4);
				getglobal(this:GetName() .. "MouseOver"):SetVertexColor(1, 1, 0);
			</OnLoad>
			<OnShow>
				if(CT_RaidTracker_ItemOptions_selected == this.id) then
					getglobal(this:GetName() .. "MouseOver"):Show();
				end
			</OnShow>
			<OnClick>
				if(arg1 == "RightButton") then
					GameTooltip:SetOwner(this, "ANCHOR_RIGHT");
					GameTooltip:SetHyperlink("item:"..this.itemid..":0:0:0");
					GameTooltip:Show();
					CT_RaidTracker_ItemOptions_ScrollBar_Update();
				end
				CT_RaidTracker_ItemOptions_SetFrame(this.id)
				CT_RaidTracker_ItemOptions_selected = this.id;
				for i=1, 22 do
					getglobal("CT_RaidTracker_ItemOptions_Entry"..i.."MouseOver"):Hide();
				end
				getglobal(this:GetName() .. "MouseOver"):Show();
				CT_RaidTracker_Debug(this:GetName());
			</OnClick>
		</Scripts>
	</Button>
	
