                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
            </Frame>
        </Frames>
        <Scripts>
            <OnLoad>
                self:RegisterEvent("UNIT_COMBAT");
                self:RegisterEvent("PLAYER_TARGET_CHANGED");
                CombatFeedback_Initialize(self, TargetHitIndicator, 28);
            </OnLoad>
            <OnEvent>
