<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
<!-- $Id: FastQuest.xml 86 2009-06-04 18:23:45Z arithmandar $ -->
    <Script file="FastQuest.lua"/>
    <Script file="localization.en.lua"/>
    <Script file="localization.tw.lua"/>
    <Script file="localization.cn.lua"/>

    <Frame name="FQ_OptionFrameBoxTemplate" virtual="true">
        <Layers>
            <Layer level="BACKGROUND">
                <FontString name="$parentTitle" inherits="GameFontHighlight">
                    <Anchors>
                        <Anchor point="BOTTOMLEFT" relativePoint="TOPLEFT">
                            <Offset>
                                <AbsDimension x="9" y="0"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Backdrop bgFile="Interface\Tooltips\UI-Tooltip-Background" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
            <EdgeSize>
                <AbsValue val="16"/>
            </EdgeSize>
            <TileSize>
                <AbsValue val="16"/>
            </TileSize>
            <BackgroundInsets>
                <AbsInset left="5" right="5" top="5" bottom="5"/>
            </BackgroundInsets>
        </Backdrop>
        <Scripts>
            <OnLoad>
                self:SetBackdropBorderColor(0.4, 0.4, 0.4);
                self:SetBackdropColor(0.5, 0.5, 0.5);
            </OnLoad>
        </Scripts>
    </Frame>
    <Frame name="FastQuestFrame" parent="UIParent" hidden="true">
        <Scripts>
            <OnLoad>FastQuest_OnLoad(self);</OnLoad>
            <OnEvent>FastQuest_OnEvent(self, event, arg1);</OnEvent>
        </Scripts>
    </Frame>
    <Button name="FastQuest_DragButtonTemplate" virtual="true" movable="true" frameStrata="DIALOG" toplevel="true">
        <Size>
            <AbsDimension x="27" y="27"/>
        </Size>
        <Scripts>
            <OnMouseDown>
                if ( arg1 == "LeftButton" ) then
                    self:SetMovable(true);
                    self:StartMoving()
                    self.isMoving = true
                end
            </OnMouseDown>
            <OnMouseUp>
                if self.isMoving then
                    self:StopMovingOrSizing()
                    self.isMoving = false
                end
            </OnMouseUp>
            <OnClick>
                FastQuest_QuestWatchDragButton_OnClick();
            </OnClick>
        </Scripts>
    </Button>
    <Frame name="FastQuest_DragFrameTemplate" virtual="true" frameStrata="BACKGROUND" visible="false" parent="UIParent" toplevel="true">
        <TitleRegion setAllPoints="true"/>
        <Size>
            <AbsDimension x="36" y="36"/>
        </Size>
    </Frame>
    <Button name="dQuestWatchDragButton" inherits="FastQuest_DragButtonTemplate" parent="MinimapCluster" visible="true">
        <Anchors>
            <Anchor point="TOPRIGHT" relativePoint="BOTTOM">
                <Offset>
                    <AbsDimension x="0" y="-50"/>
                </Offset>
            </Anchor>
        </Anchors>
        <Frames>
            <Frame name="dQuestWatch" inherits="FastQuest_DragFrameTemplate"/>
        </Frames>
    </Button>
    <Button name="FastQuestOptions_Toggle" parent="QuestLogFrame" inherits="OptionsButtonTemplate" text="FQ">
        <Size>
            <AbsDimension x="40" y="21"/>
        </Size>
        <Anchors>
            <Anchor point="TOPRIGHT" relativeTo="QuestLogFrameCloseButton" relativePoint="TOPLEFT">
                <Offset>
                    <AbsDimension x="4" y="-5"/>
                </Offset>
            </Anchor>
        </Anchors>
        <Scripts>
            <OnClick>
                FastQuest_Options_Init();
                FastQuest_Options_Toggle();
            </OnClick>
        </Scripts>
    </Button>
</Ui>
